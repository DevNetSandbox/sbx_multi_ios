<config-template xmlns="http://tail-f.com/ns/config/1.0">
  <devices xmlns="http://tail-f.com/ns/ncs">
    <device>
      <name>{$DEVICE}</name>
      <config>
        <crypto xmlns="urn:ios">
          <keyring>
            <name>Internet</name>
            <vrf>Internet</vrf>
            <pre-shared-key>
              <address>
                <address>0.0.0.0</address>
                <mask>0.0.0.0</mask>
                <key>
                  <secret>{/psk}</secret>
                </key>
              </address>
            </pre-shared-key>
          </keyring>
          <isakmp>
            <key>
              <address>0.0.0.0</address>
              <keystring>{/psk}</keystring>
            </key>
            <invalid-spi-recovery/>
            <policy>
              <priority>1</priority>
              <encr>
                <algorithm>aes</algorithm>
              </encr>
              <authentication>pre-share</authentication>
              <group>2</group>
            </policy>
            <policy>
              <priority>10</priority>
              <encr>
                <algorithm>aes</algorithm>
                <bits>256</bits>
              </encr>
              <authentication>pre-share</authentication>
              <group>2</group>
            </policy>
            <keepalive>
              <seconds>45</seconds>
            </keepalive>
            <nat>
              <keepalive>
                <seconds>45</seconds>
              </keepalive>
            </nat>
          </isakmp>
          <ipsec>
            <security-association>
              <replay>
                <window-size>512</window-size>
              </replay>
            </security-association>
            <transform-set>
              <name>outbound</name>
              <transform2>esp-aes</transform2>
              <transform2-bits>256</transform2-bits>
              <transform3>esp-sha-hmac</transform3>
              <mode>
                <transport></transport>
              </mode>
            </transform-set>
            <profile>
              <name>vpnprofile</name>
              <set>
                <transform-set>outbound</transform-set>
              </set>
            </profile>
          </ipsec>
        </crypto>
      </config>
    </device>
  </devices>
</config-template>
