<config-template xmlns="http://tail-f.com/ns/config/1.0">
  <devices xmlns="http://tail-f.com/ns/ncs">
    <device>
      <name>{$DEVICE}</name>
      <config>
        <interface xmlns="urn:ios">
        <Tunnel>
          <name>{/tunnel_number}</name>
          <description>{$TUNNEL_IF_DESCRIPTION}</description>
          <ip>
            <address>
              <primary>
                <address>{$TUNNEL_IP}</address>
                <mask>{$TUNNEL_MASK}</mask>
              </primary>
            </address>
            <unreachables>false</unreachables>
            <proxy-arp>false</proxy-arp>
            <redirects>false</redirects>
            <nhrp>
              <authentication>{/nhrp_authentication_key}</authentication>
              <map>
                <map-list>
                  <ip-address>{$PRIMARY_HEADEND_TUNNEL_IP}</ip-address>
                  <nbma-address>{$PRIMARY_HEADEND_PUBLIC_IP}</nbma-address>
                </map-list>
                <multicast>
                  <multicast-list>
                    <nbma-address>{$PRIMARY_HEADEND_PUBLIC_IP}</nbma-address>
                  </multicast-list>
                </multicast>
              </map>
              <network-id>1</network-id>
              <holdtime>300</holdtime>
              <nhs>
                <nhs-list>
                  <nhs-address>{$PRIMARY_HEADEND_TUNNEL_IP}</nhs-address>
                </nhs-list>
              </nhs>
            </nhrp>
            <tcp>
              <adjust-mss>1360</adjust-mss>
            </tcp>
            <mtu>1400</mtu>
          </ip>
          <delay>1000</delay>
          <qos>
            <pre-classify/>
          </qos>
          <tunnel>
            <source>{$SOURCE_INTERFACE}</source>
            <destination>{$PRIMARY_HEADEND_PUBLIC_IP}</destination>
            <key>{/tunnel_key}</key>
            <protection>
              <ipsec>
                <profile>vpnprofile</profile>
                <shared/>
              </ipsec>
            </protection>
          </tunnel>
        </Tunnel>
        </interface>

      </config>
    </device>
  </devices>
</config-template>
